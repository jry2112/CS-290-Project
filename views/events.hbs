                <p>Select a vendor type:</p>
                <div class="mb-3">
                    <label for="table">10x10 Table Vendor Space</label>
                    <input type="radio" name="vendor" id="table" value="table" required>
                    <label for="table">20x10 Mobile Vendor Space</label>
                    <input type="radio" name="vendor" id="mobile" value="Mobile Vendor" required>
                </div>
                <input type="submit" onclick="submitForm()">
                <button type="submit" onclick="window.open('vendor_map.pdf')">Download Vendor Map</button>

            </div>
        </form>
        

